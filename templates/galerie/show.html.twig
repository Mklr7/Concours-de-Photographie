{% extends 'base.html.twig' %}

{% block title %} {{ photo.name}}Galerie
{% endblock %}

{% block body %}




	 <section class=" bg-white dark:bg-gray-900 mt-20 ">
		<div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6   ">
			<div class="mx-auto max-w-screen-sm text-center mb-8 lg:mb-16">
				<h2 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white">{{ photo.name}}</h2>
				
			</div>
		
			
				<div class="grid gap-8 mb-6 lg:mb-16 md:grid-cols-2 items-center bg-gray-50 rounded-lg ">
					<a href="#">
						<img class="w-full rounded-lg  sm:rounded-l-lg" src="/uploads/{{ photo.illustration }}" alt="">
					</a>
					<div class="p-5">
						<h3 class="text-xl font-bold tracking-tight text-gray-900 dark:text-white">
							<a href="#">Photographe</a>
						</h3>
						<span class="text-gray-500 dark:text-gray-400">{{ photo.name }}
						</span>
						<p class="mt-3 mb-4 font-light text-gray-500 dark:text-gray-400">{{ photo.description }}</p>
						
							<h3 class="text-xl font-bold tracking-tight  text-gray-800 dark:text-white">Prise en
								{{ photo.categorie }}</h3>
						<br>
						
							<button type="button" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">Voter </button>

					</div>
				</div>
			

			

		</div>
	</section> 
{% endblock %}